<h1>All animals for sale</h1>

<%= form_tag(animals_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Species" %>
<%= submit_tag "Search" %>

<%= form_tag users_path, :method => :get do %>
    <%= text_field_tag :search, params[:search], :placeholder => "Enter Address"  %>
    <%= number_field_tag :distance, params[:distance], :placeholder => "Distance"  %>
    <%= submit_tag "Search Near", :name => nil %>
<% end %>

<% end %>

<div class='animal_image'>
<% @animals.each do |w| %>
  <p class "thumbnail">
    <%if w.images.present?%>
      <%= link_to(cl_image_tag(w.images[0]), animal_path(w)) %>
    <%else%>
        Image not available
    <%end%>
  </p>
<% end %>
</div>

