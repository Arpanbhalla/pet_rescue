
<%= form_tag(animals_path, :method => "get", class: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Species" %>
  <!-- geocoder -->
    <%= text_field_tag :area, params[:area], :placeholder => "Search near..."  %>
    <%= number_field_tag :distance, params[:distance], :class => "search-form-distance", :placeholder => "Distance"  %>
    <button type="submit" <%= submit_tag "Search", class: "search-form-button"%><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>

<% end %>
  <!-- geocoder -->
<div class="container-fluid">
  <div class="row">

  <% @animals.each do |animal| %>
      <div class="col-md-2">
        <%if animal.images.present?%>
          <%= link_to animal_path(animal) do %> <%= cl_image_tag(animal.images[0], :width => 150, :height => 150, :class => 'thumbnail') %><% end %>
        <%else%>
          Image not available
        <%end%>
      </div>
  <% end %>
</div>

</div>
