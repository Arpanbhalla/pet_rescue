    <%= f.text_field :sex, :required => true, :placeholder => "Sex" %>
  </p>
  <p>
    <%= f.text_field :dob, :required => true, :placeholder => "Date of Birth" %>
  </p>
  <p>
    <%= f.text_field :description, :required => true, :placeholder => "Description" %>
  </p>
  <p>
    <%= f.text_field :price, :required => true, :placeholder => "Price" %>
  </p>

  <p>
    <%= f.file_field(:image, :multiple => true) %>
  </p>

  <%= f.submit %>
