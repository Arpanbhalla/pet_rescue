<%= form_for(@animal, :html => {:multipart => true}) do |f| %>
    <%= f.select :species, ['Bearded Dragon',
    'Birds',
    'Burro',
    'Cats',
    'Chameleons (Veiled)',
    'Chickens',
    'Chinchillas',
    'Chinese Water Dragon',
    'Cows',
    'Dogs',
    'Donkey',
    'Ducks',
    'Ferrets',
    'Fish',
    'Geckos',
    'Geese (Chinese Swan Goose)',
    'Gerbils',
    'Goats',
    'Guinea' 'Fowl',
    'Guinea Pigs',
    'Hamsters',
    'Horses',
    'Iguanas',
    'Llamas',
    'Lizards',
    'Mice',
    'Mule',
    'Peafowl',
    'Pigs and Hogs',
    'Pigeons',
    'Ponies',
    'Pot Bellied Pig',
    'Rabbits',
    'Rats',
    'Sheep',
    'Skinks',
    'Snakes',
    'Stick Insects',
    'Sugar Gliders',
    'Tarantula',
    'Turkeys',
    'Turtles'
    ], :prompt => 'Select Animal Species' ,:required => true %>

    <%= f.text_field :breed, :required => true ,:placeholder => "Breed"%>
    <%= f.text_field :sex, :required => true, :placeholder => "Sex" %>
    <%= f.text_field :dob, :required => true, :placeholder => "Date of Birth" %>
    <%= f.text_field :description, :required => true, :placeholder => "Description" %>
    <%= f.text_field :price, :required => true, :placeholder => "Price" %>
    <%= f.file_field(:image, :multiple => true) %>
    <%= f.text_field :address, :required => true, :placeholder => "Postal Address" %>
    <%= f.submit %>
<% end %>
