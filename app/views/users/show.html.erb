<%#= @user.to_json %>
<h1><%= @user.name %></h1>

<ul>
  <li><%= @user.email %></li>
  <li><%= @user.image %></li>
  <li><%= @user.admin %></li>
</ul>

<% if @current_user && @current_user.id == @user.id %>

  <div class="controls">
    <!-- Link to edit -->
    <%= link_to "Edit", edit_user_path() %>
    <!-- Link to delete -->
    <%= link_to "Delete Account", user_path( @user.id ), :method => :delete %>
  </div>

<% end %>
