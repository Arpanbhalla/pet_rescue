<div class="row">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1><br>
</div>

<div class="modal-body row">
  <div class="user-details col-md-3">
    <h4><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <%= @user.email %></h4>
    <h4><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> <%= @user.mobile %></h4><br>
    <%if @current_user.id == @user.id%>
      <td>
        <%= link_to edit_user_path(@current_user.id), class: 'action-button' do %>Edit Profile<% end %>
      </td>
    <%end%>
  </div><br>
  <%if @current_user.id == @user.id%>
    <% @user.animals.each do |animal|%>
      <div class="show-form col-md-3">
        <p><strong>Animal Type:</strong> <%= animal.species %></p>
        <p><strong>Breed:</strong> <%= animal.breed %></p>
        <p><strong>Sex:</strong> <%= animal.sex %></p>
        <p><strong>Date of birth:</strong> <%= animal.dob %></p>
        <p><strong>Description:</strong> <%= animal.description %></p>
        <p><strong>Price:</strong> <%= animal.price %></p>
        <p><strong>Location :</strong> <%= animal.address %></p><br>
        <td>
          <%= link_to animal_path(animal), class: 'action-button' do %>View<% end %>
        </td>
        <td>
          <%= link_to edit_animal_path(animal.id), class: 'action-button' do %>Edit<% end %>
        </td>
        <td>
          <%= link_to animal, :method => :delete, :data => { :confirm => "Are you sure?" }, class: 'action-button' do %>Delete<% end %>
        </td>
      </div>
    <%end%>
  <%end%>
</div>
