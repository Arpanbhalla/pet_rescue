<div class = "login">
  <div class="form">
      <%= form_tag login_path, :class => 'login-form' do %>
      <p>
        <%= label_tag :email, ""%>
        <%= email_field_tag :email, "", :required => true, :placeholder => "Email "%>
      </p>
      <p>
        <%= label_tag :password, "" %>
        <%= password_field_tag :password, "", :required => true, :placeholder => "Password" %>
      </p>

      <button type="submit" <%= submit_tag "Login"%>Login</button>
    <% end %>
    <p class="message">Not registered? <%= link_to "Sign up", new_user_path %></p>
  </div>
</div>
<% if flash[:error] %>
  <div class="login_error"><%= flash[:error] %></div>
<% end %>


