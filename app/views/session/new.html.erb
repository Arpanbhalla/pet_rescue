<div class = "login_details">
<%= form_tag login_path do %>
  <p>

    <%= email_field_tag :email, "", :required => true, :placeholder => "Enter your email "%>
  </p>
  <p>
    <%= password_field_tag :password, "", :required => true, :placeholder => "Enter you password" %>
  </p>

  <%= submit_tag "Login" %>
<% end %>
</div>
<% if flash[:error] %>
  <div class="login_error"><%= flash[:error] %></div>
<% end %>
