<!DOCTYPE html>
<html>
<head>
  <title>pet_rescue</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%=controller_name%> <%=action_name %>'>

  <% if flash[:success] %>
    <h1><%= flash[:success] %></h1>
  <% end %>
  <% if flash[:error] %>
    <!-- <h1><%#= flash[:error] %></h1> -->
  <% end %>

  <nav>

    <% unless @current_user.present? %>
      <%= link_to( "Login", login_path(), :class => 'btn_login' ) %>
      <%= link_to( "Sign up", new_user_path(), :class =>"btn_signup" ) %>
    <% else %>
      <div class="all_animals"><%= link_to "All animals", animals_path %></div>
      <%= link_to( "Log out", logout_path(), :method => :delete, :class => "log_out") %>
    <% end %>
  </nav>
  <div class="navigation_box"></div>
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
